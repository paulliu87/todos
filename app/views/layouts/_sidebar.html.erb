<h3>Recently completed</h3>
<% if current_user %>
  <div class="recently-completed">
    <% @recent_todos.each do |todo| %>
      <div class="row" style='margin-top: 0.1em'>
        <a href="/users/<%= params[:user_id] %>/todos/<%= todo.id %>" recent-list-id="<%= todo.id %>" class="list-group-item list-group-item-action clearfix list-group-item-success">
          <span class="glyphicon glyphicon-ok-sign" style="margin-right: 0.5em"></span>
          <%= todo.title %>
          <span class="pull-right">
            <span class="glyphicon glyphicon-step-backward"></span>
          </span>
        </a>
      </div>
    <% end %>
  </div>
  <br>
<% end %>
