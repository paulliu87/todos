<h1>TODOs</h1>
<div class="list-group">
<% if @todos != nil %>
    <% @todos.each do |todo| %>
    <div class="row">
      <% if todo.overdue %>
      <a href="/users/<%= params[:user_id] %>/todos/<%= todo.id %>" class="list-group-item list-group-item-action col-md-6  clearfix list-group-item-danger">
        <span class="glyphicon glyphicon-question-sign"></span>
        <%= todo.title %>
        <span class="pull-right">
          <span class="glyphicon glyphicon-trash" style='display:inline-block'></span>
          <span class="glyphicon glyphicon-check"></span>
        </span>

      </a>
      <% else %>
      <a href="/users/<%= params[:user_id] %>/todos/<%= todo.id %>" class="list-group-item list-group-item-action col-md-6 clearfix">
        <span class="glyphicon glyphicon-question-sign"></span>
        <%= todo.title %>
          <span class="pull-right">
            <span class="glyphicon glyphicon-edit" style='margin-right:0.5em; display:inline-block'></span>
            <span class="glyphicon glyphicon-trash" style='margin-right:0.5em; display:inline-block'></span>
            <span class="glyphicon glyphicon-check"></span>
          </span>
      </a>
      <% end %>
    <% end %>
<% end %>
</div>
