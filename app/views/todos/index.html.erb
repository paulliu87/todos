<% content_for(:sidebar) do %>
  <%= render :partial => "layouts/sidebar" %>
<% end %>
<h3>TODOs</h3>
<div class="list-group">
<% if @todos != nil %>
    <% @todos.each do |key, value| %>
      <div class="row">
        <div>
          <img src="/images/summer.jpg"  class="col-md-12 img-reponsive img-rounded list-group-item list-group-item-action clearfix" style="max-height: 60px; max-width: auto; padding: 0px;" />
          <div class="cal-section">
            <time class="icon">
              <p>Dec</p>
              <div class="cal-top"></div>
              <span>5</span>
            </time>
          </div>
          <!-- <span class="col-md-2 list-group-item list-group-item-action clearfix" style="height: 60px;"><%= key %></span> -->
        </div>
      </div>
      <% value.each do |todo| %>
        <div class="row" style='margin-top: 0.1em'>
          <% if todo.overdue %>
            <a href="/users/<%= params[:user_id] %>/todos/<%= todo.id %>" data-list-id="<%= todo.id %>" class="list-group-item list-group-item-action clearfix list-group-item-danger">
              <span class="glyphicon glyphicon-question-sign"></span>
              <%= todo.title %>
              <span class="pull-right">
                <span class="glyphicon glyphicon-edit" style='margin-right:0.5em; display:inline-block'></span>
                <span class="glyphicon glyphicon-trash" style='margin-right:0.5em; display:inline-block'></span>
                <span class="glyphicon glyphicon-ok"></span>
              </span>
            </a>
          <% else %>
            <a href="/users/<%= params[:user_id] %>/todos/<%= todo.id %>" data-list-id="<%= todo.id %>" class="list-group-item list-group-item-action clearfix">
              <span class="glyphicon glyphicon-question-sign"></span>
              <%= todo.title %>
              <span class="pull-right">
                <span class="glyphicon glyphicon-edit" style='margin-right:0.5em; display:inline-block'></span>
                <span class="glyphicon glyphicon-trash" style='margin-right:0.5em; display:inline-block'></span>
                <span class="glyphicon glyphicon-ok"></span>
              </span>
            </a>
          <% end %>
        </div>
      <% end %>
      <br>
    <% end %>
<% end %>
</div>
