<% content_for(:sidebar) do %>
  <%= render :partial => "layouts/sidebar" %>
<% end %>
<div class="list-group">
<% if @todos != nil %>
    <% @todos.each do |key, value| %>
      <div class="row calendar-header" style='margin-top: 0.1em'>
        <!-- <div> -->
          <div class="cal-section col-md-1">
            <time class="icon" data-calendar-id="<%= key.to_s[5..9] %>">
              <p><%= key.to_s[5..6] %></p>
              <div class="cal-top"></div>
              <span><%= key.to_s[8..9] %></span>
            </time>
          </div>
          <img src="/images/summer.jpg"  class="pull-right col-md-10 img-reponsive img-rounded list-group-item list-group-item-action clearfix" style="max-height: 60px; max-width: auto; padding: 0px;" />
          <!-- <span class="col-md-2 list-group-item list-group-item-action clearfix" style="height: 60px;"><%= key %></span> -->
      </div>
      <!-- </div> -->
      <% value.each do |todo| %>
        <div class="row uncompleted-todos" style='margin-top: 0.1em'>
          <% if todo.overdue %>
            <a href="/users/<%= params[:user_id] %>/todos/<%= todo.id %>" data-list-id="<%= todo.id %>" class="pull-right col-md-10 list-group-item list-group-item-action clearfix list-group-item-danger">
              <span class="glyphicon glyphicon-question-sign"></span>
              <%= todo.title %>
              <span class="pull-right">
                <span class="glyphicon glyphicon-edit" style='margin-right:0.5em; display:inline-block'></span>
                <span class="glyphicon glyphicon-trash" style='margin-right:0.5em; display:inline-block'></span>
                <span class="glyphicon glyphicon-ok"></span>
              </span>
            </a>
          <% else %>
            <a href="/users/<%= params[:user_id] %>/todos/<%= todo.id %>" data-list-id="<%= todo.id %>" class="pull-right col-md-10 list-group-item list-group-item-action clearfix">
              <span class="glyphicon glyphicon-question-sign"></span>
              <%= todo.title %>
              <span class="pull-right">
                <span class="glyphicon glyphicon-edit" style='margin-right:0.5em; display:inline-block'></span>
                <span class="glyphicon glyphicon-trash" style='margin-right:0.5em; display:inline-block'></span>
                <span class="glyphicon glyphicon-ok"></span>
              </span>
            </a>
          <% end %>
        </div>
      <% end %>
      <br>
    <% end %>
<% end %>
</div>
