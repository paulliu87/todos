<div class="row">
    <div class="col-md-1">
        <span class="text">Title:</span>
    </div>
    <div class="col-md-5">
        <span class="text-muted"><%= @todo.title %></span>
    </div>
</div><br>
<div class="row">
    <div class="col-md-1">
        <span class="text">Deadline:</span>
    </div>
    <div class="col-md-5">
        <span class="text-muted"><%= @todo.deadline %></span>
    </div>
</div><br>
<div class="row">
    <div class="col-md-1">
        <span class="text">Complete:</span>
    </div>
    <div class="col-md-5">
        <span class="text-muted"><%= @todo.completed %></span>
    </div>
</div><br>
<div class="row">
    <div class="col-md-1">
        <span class="text">Detail:</span>
    </div>
    <div class="col-md-5">
        <span class="text-muted"><%= @todo.detail %></span>
    </div>
</div><br>
<div class="row">
    <%= link_to 'Back', { :controller => 'todos', :action => 'index', :id => @todo.id },
    { :method => :get, :class => "btn btn-default", :role => "button"} %>
    <%= link_to 'Delete', { :controller => 'todos', :action => 'destroy', :id => @todo.id },
    { :confirm => 'Are you sure?', :method => :delete, :remote => true, :class => "btn btn-default", :role => "button"} %>
    <%= link_to 'Mark as Completed', { :controller => 'todos', :action => 'completed', :id => @todo.id },
    { :method => :put, :remote => true, :class => "btn btn-default", :role => "button"} %>
</div>
