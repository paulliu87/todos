<h1>Log In</h1>
<% if @error != nil %>
    <div class="error_messsages" >
        <p><%= @error %></p>
    </div>
<% end %>
<%= form_tag sessions_path do %>
    <div>
        <%= label_tag :username %><br />
        <%= text_field_tag :username %>
    </div>
    <div>
        <%= label_tag :password %><br />
        <%= password_field_tag :password %>
    </div>
    <div>
        <%= submit_tag "Log In" %>
    </div>
<% end %>
